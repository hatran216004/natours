extends base 

block content
    main.main
        .signup-form
            h2.heading-secondary.ma-bt-lg Create new account
            form#form--signup.form
                .form__group
                    label.form__label(for='email') Your name
                    input#name-signup.form__input(type='text', placeholder='your name', required)
                .form__group
                    label.form__label(for='email') Email address
                    input#email-signup.form__input(type='email', placeholder='you@example.com', required)
                .form__group.ma-bt-md
                    label.form__label(for='password') Password
                    input#password-signup.form__input(type='password', placeholder='••••••••', required, minlength='8', value="test1234")
                .form__group.ma-bt-md
                    label.form__label(for='password') Confirm password
                    input#password-confirm.form__input(type='password', placeholder='••••••••', required, minlength='8')    
                .form__group
                    button.btn.btn--green Sign up